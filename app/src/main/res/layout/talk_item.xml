<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/talk_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        app:roundAsCircle="true"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/talk_user"
        android:layout_toRightOf="@id/talk_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#888"
        android:text="name"
        />
    <TextView
        android:id="@+id/talk_floor"
        android:text="10"
        android:gravity="center"
        android:padding="8dp"
        android:background="@mipmap/review_card"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/talk_content"
        android:layout_below="@id/talk_user"
        android:layout_toRightOf="@id/talk_icon"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:textSize="14dp"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>
    <TextView
        android:id="@+id/talk_time"
        android:layout_below="@id/talk_content"
        android:layout_toRightOf="@id/talk_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#aaa"
        android:text="50分钟前"/>
    <ImageView
        android:id="@+id/talk_zan"
        android:layout_below="@id/talk_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/qiuyoucircle_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>